<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7SE.vistaLogin">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
            <Entry x:Name="txtPasswd" Placeholder="Ingrese la contraseña" IsPassword="True"/>
            <Button x:Name="btnLogin" Text="Iniciar Sesion" BackgroundColor="DarkCyan" TextColor="White" 
                        Clicked="btnLogin_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registrarse" BackgroundColor="DarkGoldenrod" TextColor="Wheat"
                        Clicked="btnRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>